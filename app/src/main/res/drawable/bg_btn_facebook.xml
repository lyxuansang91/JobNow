        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#30529f" android:startColor="#30529f" android:type="linear" />
            <corners android:radius="5dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#30529f" android:startColor="#30529f" android:type="linear" />
            <corners android:radius="5dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#5078d1" android:startColor="#30529f" android:type="linear" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</selector>