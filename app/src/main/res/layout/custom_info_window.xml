<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="25dp"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/tvInfoWindowTitle"
        android:layout_width="250dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvInfoWindowLocation"
        android:layout_width="wrap_content"
        android:drawableLeft="@mipmap/ic_location"
        android:drawablePadding="5dp"
        android:textColor="@color/darkGray"
        android:maxLines="1"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/tvInfoWindowSalary"
        android:layout_width="wrap_content"
        android:drawableLeft="@mipmap/ic_money"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:text="600-900 USD"
        android:maxLines="1"
        android:textColor="@color/colorMoney"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

</LinearLayout>