<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.DetailJobsFragment"
    android:orientation="vertical"
    tools:showIn="@layout/activity_detail_jobs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Open Farm Community - Guest Relations Officer"
                    android:textColor="#2c77ba"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_location"
                    android:drawablePadding="10dp"
                    android:text="Central"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_budget"
                    android:drawablePadding="10dp"
                    android:text="600-900USD"
                    android:textColor="#f96145"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_experience_year"
                    android:drawablePadding="10dp"
                    android:text="Min 5 year (Junior)"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_company" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aalst Chocolate Pte Ltd"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Posted: 9 minutes ago"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@color/colorGray"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Job Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Job Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="@string/job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="Job Requirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="Work Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="Address: Ha Noi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="5dp"
                    android:drawableLeft="@mipmap/ic_location_2"
                    android:drawablePadding="2dp"
                    android:textSize="14sp"
                    android:textColor="#a8d1ea"
                    android:layout_width="match_parent"
                    android:text="View larger map/directions"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:text="Share this job"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_facebook500"
                    android:background="@android:color/transparent"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_twitter"
                    android:background="@android:color/transparent"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_googleplus"
                    android:background="@android:color/transparent"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_linkedin"
                    android:background="@android:color/transparent"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_pinterest"
                    android:background="@android:color/transparent"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_rss"
                    android:background="@android:color/transparent"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="1 Applications"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="right"
                    android:text="Closing on 28/12/2016"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_star"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <Button
                android:text="Save Job"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:background="@color/colorBgApplyJob"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_apply_job"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <Button
                android:text="Apply Job"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>
