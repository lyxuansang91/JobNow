<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:background="@mipmap/splash"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_logo"
        android:layout_width="120dp"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:background="@null"
        android:layout_height="0dip" />

    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:padding="40dp"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tvNumberJob"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:text="12.345 Job in Job now"
            />

        <TextView android:id="@+id/tvIntro"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:text="Most Quality Jobs, Most Quality Employers, Most trusted"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/btnSignUp"
            android:background="@drawable/bg_btn_signup"
            android:text="Sign Up"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLogin"
            android:background="@drawable/bg_btn_log_in"
            android:layout_margin="@dimen/dp5"
            android:text="Log In"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
